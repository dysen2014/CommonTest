<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListDemoActivity">

    <FrameLayout
        style="@style/match_match">

        <com.dysen.recyclerview.PullLoadMoreRecyclerView
            android:id="@+id/rcl_list"
            style="@style/match_match"
            />

        <com.dysen.common_library.views.WaveSideBarView
            android:id="@+id/side_bar"
            style="@style/match_match"
            android:paddingRight="8dp"
            app:sidebar_lazy_respond="true"
            android:scrollbars="vertical"
            app:sidebar_text_color="@color/colorAccent"/>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>