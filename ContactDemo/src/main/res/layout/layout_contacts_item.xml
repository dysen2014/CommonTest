<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap">

    <TextView
        android:id="@+id/tv_group"
        style="@style/tv_user_black2_14"
        android:layout_width="match_parent"
        android:background="#20000000"
        android:paddingLeft="16dp"
        android:text="A"
        android:textStyle="bold"
        android:visibility="gone"
        android:tag="skin:text_color:textColor"
        android:textColor="@color/text_color"/>

    <com.dysen.common_library.views.RevealLayout
        android:id="@+id/ll_item"
        style="@style/match_wrap">

        <RelativeLayout
            style="@style/match_wrap"
            android:padding="@dimen/margin_padding_16">

            <ImageView
                android:id="@+id/iv_pic"
                style="@style/wrap_wrap"
                android:layout_width="@dimen/margin_padding_40"
                android:layout_height="@dimen/margin_padding_40"
                android:layout_marginRight="@dimen/margin_padding_8"
                android:src="@mipmap/icon"/>
            <TextView
                android:id="@+id/tv_pic"
                style="@style/wrap_wrap"
                android:layout_width="@dimen/margin_padding_40"
                android:layout_height="@dimen/margin_padding_40"
                android:layout_marginRight="@dimen/margin_padding_8"
                android:background="@color/text_color"
                android:textColor="@color/white"
                android:gravity="center"
                android:tag="skin:text_color:background"
                android:visibility="gone"/>

            <LinearLayout
                style="@style/wrap_wrap"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="64dp">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/tv_user_black2_16"
                    android:tag="skin:text_color:textColor"
                    android:text="sendy"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/tv_user_black2_14"
                    android:layout_below="@id/tv_name"
                    android:tag="skin:text_color:textColor"
                    android:text="18971642933"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </RelativeLayout>
    </com.dysen.common_library.views.RevealLayout>

    <View
        style="@style/view_line_v"
        android:layout_height="2dp"
        android:background="@drawable/actionbar_shadow_up" />
</LinearLayout>
