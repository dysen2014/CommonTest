<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding_8">

    <TextView
        android:id="@+id/tv_time"
        style="@style/tv_user_gray_12"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/margin_padding_16"
        android:text="@string/sys_msg" />

    <LinearLayout
        android:id="@+id/ll_receive_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_receive"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_avatar" />

        <com.dysen.common_library.views.bubble.BubbleLayout
            style="@style/match_wrap"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            app:bl_arrowDirection="left"
            app:bl_arrowPosition="10dp"
            app:bl_arrowWidth="8dp"
            app:bl_bubbleColor="#20000000"
            app:bl_cornersRadius="16dp"
            app:bl_strokeWidth="0dp">

            <TextView
                android:id="@+id/tv_receive_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="receive data"
                android:textColor="@android:color/black" />
        </com.dysen.common_library.views.bubble.BubbleLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:gravity="right"
        android:orientation="horizontal">

        <com.dysen.common_library.views.bubble.BubbleLayout
            style="@style/match_wrap"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:padding="8dp"
            app:bl_arrowDirection="right"
            app:bl_arrowPosition="10dp"
            app:bl_arrowWidth="8dp"
            app:bl_bubbleColor="@color/bnt_color2"
            app:bl_cornersRadius="16dp"
            app:bl_strokeWidth="0dp">

            <TextView
                android:id="@+id/tv_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send data"
                android:textColor="@android:color/white" />
        </com.dysen.common_library.views.bubble.BubbleLayout>

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_avatar" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sys_msg"
        style="@style/tv_user_gray_12"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/sys_msg" />

</LinearLayout>