<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.644" />

    <com.warkiz.widget.IndicatorSeekBar
        android:padding="24dp"
        android:id="@+id/ic_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isb_indicator_color="@color/transparent"
        app:isb_indicator_text_color="@color/transparent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="1000"
        app:isb_min="0.0"
        app:isb_progress="0"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="divider"
        app:isb_show_tick_texts="false"
        app:isb_thumb_adjust_auto="false"
        app:isb_thumb_drawable="@mipmap/icon_trans_slider"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_drawable="@mipmap/icon_trans_spot"
        app:isb_tick_marks_ends_hide="false"
        app:isb_tick_marks_size="16dp"
        app:isb_tick_texts_color="@color/text_color_blue"
        app:isb_tick_texts_size="14sp"
        app:isb_ticks_count="10"
        app:isb_track_background_color="@color/trade_asset_ts"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/gray_bg"
        app:isb_track_progress_size="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="356dp" />

</LinearLayout>