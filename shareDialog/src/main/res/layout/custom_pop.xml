<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="8dp"
    android:id="@+id/prl">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@color/whtie">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/whtie"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:text="分享到..."
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_share_wx"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@mipmap/icon_share_weixin" />

            <ImageView
                android:id="@+id/img_share_wxpyq"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@mipmap/icon_share__weixinquan" />

            <ImageView
                android:id="@+id/img_share_qq"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@mipmap/icon_share_qq" />

            <ImageView
                android:id="@+id/img_share_wb"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/icon_share__sina" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>