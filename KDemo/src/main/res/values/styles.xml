    <style name="footer_bar" parent="weight_wrap">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="title_base_title" parent="wrap_wrap">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_color_white</item>

        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="title_base_button" parent="wrap_wrap">
        <item name="android:layout_marginLeft">@dimen/margin_padding_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="title_base_tv" parent="title_base_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="title_base_button_r" parent="wrap_wrap">
        <item name="android:layout_marginRight">@dimen/margin_padding_10</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="title_base_tv_r" parent="title_base_button_r">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="user_confirm_wh" parent="match_wrap">
