    <style name="layout_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/main_header_bg</item>
    </style>
    <style name="layout_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/main_footer_bg</item>
    </style>
    <style name="layout_header_select" parent="match_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/main_header_bg</item>
    </style>


    <style name="match_match_header_bg_color" parent="match_match">
        <item name="android:background">@color/main_header_bg</item>
